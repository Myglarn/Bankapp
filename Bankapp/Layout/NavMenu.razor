@inject ILogIn LoginService
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Suedbank</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-bank" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <!-- Shows the rest of the navmenu if you are logged in -->
        @if (isLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="CreateAccount">
                    <span class="bi bi-plus-square-fill" aria-hidden="true"></span> Create Account
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Accounts">
                    <span class="bi bi-wallet2" aria-hidden="true"></span> Accounts
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="NewTransaction">
                    <span class="bi bi-cash-coin" aria-hidden="true"></span> New Transaction
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="History">
                    <span class="bi bi-hourglass-split" aria-hidden="true"></span> History
                </NavLink>
            </div>
        }

        <!-- Button for logging out -->
        <div class="nav-item px-3">
            @if (isLoggedIn)
            {
                <NavLink class="nav-link" @onclick="LogoutAsync">
                    <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout</NavLink>
            }
        </div>          
    </nav>
</div>

@code {
    // Instance variables
    private bool collapseNavMenu = true;
    private bool isLoggedIn;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    /// <summary>
    /// Method that is used when the component is initialized.
    /// Checks login status and subscribes to login-state change events.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        isLoggedIn = await LoginService.IsLogedInAsync();
        LoginService.OnLoginStateChanged += AuthStateChanged;
    }

    /// <summary>
    /// Logs the user out and refreshes the UI and navigates to the Home page.
    /// </summary>    
    private async Task LogoutAsync()
    {
        await LoginService.LogOutAsync();
        isLoggedIn = false;
        StateHasChanged();
        Navigation.NavigateTo("/");        
    }

    /// <summary>
    /// Invoked automatically when login state changes in the LoginService.
    /// Refreshes the UI to reflect the updated authentication state.
    /// </summary>
    private async void AuthStateChanged()
    {
        isLoggedIn = await LoginService.IsLogedInAsync();
        await InvokeAsync(StateHasChanged);
    }

    /// <summary>
    /// Unsubscribes from login state change events.
    /// </summary>
    public void Dispose()
    {
        LoginService.OnLoginStateChanged -= AuthStateChanged;
    }

    /// <summary>
    /// Toggles the collapse state of the navigation menu.
    /// </summary>
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
